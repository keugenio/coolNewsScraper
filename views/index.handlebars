<!-- *** main content *** -->

    <div id="allArticlesWrapper" class="d-flex justify-content-center flex-wrap bg-warning container-fluid">
            {{#each coolNews}}
                <div class="card p-2 m-1 d-flex" data-id="{{this._id}}" style="width: 20rem;"> 
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs articleTabs">
                                    {{#if this.comment.comment}}
                                        {{#>commentLinkActive}}{{/commentLinkActive}}
                                    {{else}}
                                        {{#>articalLinkActive}}{{/articalLinkActive}}
                                    {{/if}}                   
                            </ul>
                            
                        </div>

                        <div class="card-block">
                                <div class="tab-content"> 
                                    {{#if this.comment.comment}}
                                        {{#>commentTabActive}}{{/commentTabActive}}                                        
                                    {{else}}
                                        {{#>articalTabActive}}{{/articalTabActive}}                                        
                                    {{/if}}
                                </div>
                        </div> 
                        <div class="card-footer d-flex justify-content-end"> 
                                <button type="button" class="btn btn-success mr-auto moreLink" data-toggle="modal" data-target="#articalModal" data-id="{{this._id}}">More</button>
                        </div>
                </div>
            {{/each}} 
    </div>
 
  {{!-- artical modal --}}
  <div class="modal fade" id="articalModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="articleTitle">Modal Header</h4>            
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body" id="articalContent">
          <p>This is a large modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  {{!-- comment modal --}}
  <div class="modal fade" id="editCommentModal" role="dialog" id="commentModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="editCommentModalTitle">comment for Article </h4>          
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body" id="commentContent">
            <form id="commentForm" class="text-center">
              <textarea class="w-100" name="comment" id="editCommentBody" placeholder="Enter text here..." autofocus></textarea>    
              <button type="button" data-dismiss="modal" class="btn btn-outline-success" id="saveComment">submit</button>         
            </form>
        </div>
        <div class="modal-footer" id="editModalFooter">

          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  
<script src="/assets/js/app.js"></script>
