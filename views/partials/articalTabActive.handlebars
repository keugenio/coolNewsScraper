<div class="tab-pane active" id="Article-{{this._id}}"> 
    <img class="card-img-top" src="{{this.img}}"></img>
    <div class="h4 card-title mt-3">{{this.title}}"</div>
    <div class="card-text">{{this.description}}"</div> 
</div> 
<div class="tab-pane p-3" id="comment-{{this._id}}"> 
    <div class="card">
        <div class="card-body">
            <div class="card-text">
                {{#if this.comment.comment}}     
                    <p>{{this.comment.comment}}</p>
                {{else}}
                    <p>No comments for this Article</p>
                {{/if}}
            </div>

            <button class="btn btn-warning card-link btnEditComment" 
                data-toggle="modal" 
                data-id="{{this._id}}" 
                data-target="#editCommentModal">
                {{#if this.comment.comment}}
                    Edit
                {{else}}
                    Add
                {{/if}}
            </button>
        </div>
    </div>
</div>